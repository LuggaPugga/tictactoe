{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NEXT_PUBLIC_BACKEND_URL", "NEXT_PUBLIC_UMAMI_URL", "NEXT_PUBLIC_UMAMI_WEBSITE_ID"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
